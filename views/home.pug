extends components/base

include components/flash

block main
    section
        h3 Home

    section
        +flash()

        if req.user
            p Hello #{req.user.username}.  You are currently logged in.  Would you like to #[a(href='/logout') logout]?
        else
            p Hello anonymous.  You are currently logged out.  Would you like to #[a(href='/login') login] or #[a(href='/register') register]?